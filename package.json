{
    "name": "reall3dviewer",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "vite",
        "dev:backend": "node server.js",
        "build": "tsc && vite build",
        "build-pkg": "tsc && vite build --config vite-pkg.config.ts && node buildPkg.js --before && vite build --config vite-pkg.config.ts && node buildPkg.js --after",
        "preview": "vite preview"
    },
    "dependencies": {
        "@gotoeasy/three-tile": "^0.8.7",
        "@tweenjs/tween.js": "^25.0.0",
        "cnpm": "^9.4.0",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "multer": "^2.0.2",
        "three": "^0.171.0"
    },
    "devDependencies": {
        "@types/node": "^22.16.5",
        "@types/three": "^0.171.0",
        "@vituum/vite-plugin-postcss": "^1.1.0",
        "concurrently": "^9.2.0",
        "less": "^4.2.2",
        "typescript": "^5.6.3",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-glsl": "^1.4.2",
        "vite-plugin-svg-icons": "^2.0.1"
    }
}
